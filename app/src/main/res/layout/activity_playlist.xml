<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".Playlist">

    <ListView
        android:id="@+id/listviewtxt"
        android:layout_width="401dp"
        android:layout_height="322dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/search" />

    <TextView
        android:id="@+id/historyTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Playlist"
        android:textColor="#FF9800"
        android:textSize="50sp"
        android:textStyle="bold"
        android:typeface="serif"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.045" />

    <EditText
        android:id="@+id/search"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@color/black"
        android:ems="10"
        android:hint="Search Music"
        android:inputType="text"
        android:padding="10dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#FAF6F6"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/historyTitle"
        app:layout_constraintVertical_bias="0.013" />

    <Button
        android:id="@+id/historyBtn"
        android:layout_width="105dp"
        android:layout_height="60dp"
        android:layout_marginTop="32dp"
        android:text="History"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/listviewtxt" />

    <Button
        android:id="@+id/swipeBtn"
        android:layout_width="105dp"
        android:layout_height="60dp"
        android:layout_marginTop="32dp"
        android:text="Swipe"
        app:layout_constraintStart_toEndOf="@+id/historyBtn"
        app:layout_constraintTop_toBottomOf="@+id/listviewtxt" />

    <Button
        android:id="@+id/pickArtistBtn"
        android:layout_width="105dp"
        android:layout_height="60dp"
        android:layout_marginTop="32dp"
        android:text="Pick Artist"
        app:layout_constraintStart_toEndOf="@+id/swipeBtn"
        app:layout_constraintTop_toBottomOf="@+id/listviewtxt" />

    <Button
        android:id="@+id/playlistBtn"
        android:layout_width="105dp"
        android:layout_height="60dp"
        android:layout_marginTop="32dp"
        android:text="Playlist"
        app:layout_constraintStart_toEndOf="@+id/pickArtistBtn"
        app:layout_constraintTop_toBottomOf="@+id/listviewtxt" />

</androidx.constraintlayout.widget.ConstraintLayout>
